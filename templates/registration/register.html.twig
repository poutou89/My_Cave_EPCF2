{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    <main id="login">
        <div class="container">
            <div class="login">
                <form method="post" action="{{ path('app_register') }}">
                    <h2>Inscription</h2>

                    {% if errors is defined %}
                        <div class="alert alert-danger">
                            {{ form_errors(errors) }}
                        </div>
                    {% endif %}

                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="nom">Nom</label>
                            <input type="text" id="nom" name="nom" required>
                        </div>
                        <div class="form-group">
                            <label for="prenom">Pr√©nom</label>
                            <input type="text" id="prenom" name="prenom" required>
                        </div>
                    </div>

                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}

                    <label for="plainPassword">Mot de passe</label>
                    <input type="password" id="plainPassword" name="plainPassword" required>

                        <label for="agreeTerms" class="terms">
                            <input type="checkbox" id="agreeTerms" name="agreeTerms" required>
                            Accepter les conditions
                        </label>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn">S'enregistrer</button>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
