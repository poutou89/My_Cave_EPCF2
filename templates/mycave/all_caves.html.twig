{% extends 'base.html.twig' %}

{% block title %}Toutes les caves{% endblock %}

{% block main %}
<main id="cave-list">
    <section class="container-main">
        <h1>üçá Toutes les caves du site</h1>
        <div class="filtre">
            <form method="get" class="filters">
                <input type="text" name="cave_nom" placeholder="Nom de la cave" value="{{ app.request.get('cave_nom') }}">
                <input type="text" name="prenom" placeholder="Pr√©nom" value="{{ app.request.get('prenom') }}">
                <input type="text" name="nom" placeholder="Nom" value="{{ app.request.get('nom') }}">
                <input type="date" name="created_at" value="{{ app.request.get('created_at') }}">
                <input type="number" name="min_bottles" placeholder="Min bouteilles" value="{{ app.request.get('min_bottles') }}">
                <button type="submit" class="btn">Filtrer</button>
            </form>
        </div>
        {% if caves is not empty %}
            <ul>
                {% for cave in caves %}
                    <li>
                        <a href="{{ path('app_public_cave', { id: cave.id }) }}">
                            <h2>{{ cave.nom }}</h2>
                            <p>Cr√©√©e le {{ cave.createdAt|date('d/m/Y') }}</p>
                            {% if cave.user %}
                                <p>üë§ Propri√©taire : {{ cave.user.prenom }} {{ cave.user.nom }}</p>
                            {% endif %}

                                {% if cave.wineBottles|length > 0 %}
                                    <p>Contient {{ cave.wineBottles|length }} bouteilles :</p>
                                    <ul>
                                {% for bottle in cave.wineBottles %}
                                    <li>
                                        {{ bottle.name }} ({{ bottle.year }})
                                    </li>
                                {% endfor %}
                                
                            </ul>
                        {% else %}
                            <p><em>Aucune bouteille pour le moment.</em></p>
                        {% endif %}
                    </li></a>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucune cave trouv√©e.</p>
        {% endif %}
    </section>
</main>
{% endblock %}